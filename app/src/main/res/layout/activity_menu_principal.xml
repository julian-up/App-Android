<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipal"
    android:background="@drawable/fondopantalla">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recicla.png"
            android:layout_width="143dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/recicla" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eco_Recicla"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Menu" />

        <Button
            android:id="@+id/button10"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/verde"
            android:text="Consejos"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/button11"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/verde"
            android:text="Beneficios de reciclar"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/button12"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:backgroundTint="@color/verde"
            android:text="Contador recompensa" />

        <Button
            android:id="@+id/button13"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Estadísticas"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/verde"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/button19"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Categorización"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/verde"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/button14"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/verde"
            android:textSize="20dp"
            android:text="Cerrar Sesión" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>