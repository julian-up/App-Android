<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroReciclaje"
    android:background="@drawable/fondopantalla">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recicla.png"
            android:layout_width="143dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/recicla" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Usted a elegido"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/botella" />

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="center"
            android:textSize="20dp"
            android:hint="Â¿Cual es la cantidad? en KG" />

        <Button
            android:id="@+id/button7"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/verde"
            android:text="Hecho"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="Volver a menu"
            android:layout_gravity="center"
            android:backgroundTint="@color/verde"
            android:textSize="20dp"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>